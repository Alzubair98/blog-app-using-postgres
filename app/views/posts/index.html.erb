<div>
  <img src='#{ <%= @user.photo %> }' width='100' height='100' />
  <h1><%= @user.name%></h1>
  <p>number of posts: <%=@user.posts_counter || 0%></p>
</div>
<hr />
<h1>All Posts</h1>
<div>
  <% if @posts.empty? %>
  <h1>This Uer Dose Not Have Any Posts</h1>
  <%end%>
  <% @posts.each do |post|%>
  <% if post.user_id = @user.id %>
  <div>
    <h2><%= post.title%></h2>
    <h3><%= post.text%></h3>
    <p>comments: <%= post.comments_counter || 0%></p>
    <p>likes: <%= post.likes_counter || 0%></p>
  </div>
  <hr />

  <%end%>
  <%end%>
</div>