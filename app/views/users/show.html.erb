<div>
  <img src='#{ <%= @user.photo %> }' alt="user-img" />
  <span><%= @user.name%></span>
  <h4>Number of posts:- <%= @user.posts_counter %></h4>
  <h3>Bio: <%=@user.bio %></h3>
</div>
<hr />
<h1>Last Posts</h1>
<div>
  <% if @posts.empty? %>
  <h1>This User Dose Not Have Any Posts</h1>
  <%end%>
  <% @posts.each do |post|%>
  <div class="post-div">
    <h2><%= link_to post.title, "/users/#{@user.id}/posts/#{post.id}"%></h2>
    <h3><%= post.text%></h3>
    <p>comments: <%= post.comments_counter%>, likes: <%= post.likes_counter %></p>
  </div>
  <%end%>
  <%= link_to "ALL Posts" , "#{@user.id}/posts", class: "no-underline"%>
</div>